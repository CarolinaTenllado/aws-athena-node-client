  "compilerOptions": {
    "lib": ["es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2018",
    "declaration": true
  },
  "exclude": [
    "build",
    "gulpfile.*",
    "node_modules",
    "test"
  ]
}
